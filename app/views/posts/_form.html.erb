<%= form_with model: post, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class='mt-3 mb-3'>
    <%= image_tag post.image.url %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %> 
