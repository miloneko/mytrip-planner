<div class="container px-24 py-24 mx-auto">
  <div class="flex flex-col text-center mb-30">
    <%= image_tag @post.image.url(:thumb) %>
      <p><%= @post.title %></p>
      <p><%= @post.user.name %></p>
      <% if logged_in? && current_user.id == @post.user_id %>
        <i class="fa-solid fa-pen-to-square"></i><%= link_to '編集', edit_post_path(@post.id)%>
        <i class="fa-solid fa-trash-can"></i><%= link_to '削除', post_path(@post.id),method: :delete, data: { confirm: '本当に消去しますか?' } %>
      <% end %>
  </div>
</div>
