<div class="bg-white max-w-sm rounded overflow-hidden font-serif shadow-lg">
  <div id="post-id-<%= post.id %>">
    <div class="px-6 py-4">
      <%= image_tag post.image_url, size: '300x200' %>
        <div class="p-1 md:w-1/3 sm:mb-0 mb-6">
          <h1 class="title-font text-lg font-medium text-gray-900 mb-3"><%= link_to post.title, post_path(post)%></p>
          <p class="leading-relaxed"><%= post.location.name %></p>
          <p class="leading-relaxed"><%= post.user.name %></p>
          <p><%= link_to '詳細', post_path(post)%></p>
         
        </div>
    </div>
  </div>
</div> 
