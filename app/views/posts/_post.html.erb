<div class=" rounded overflow-hidden border w-full lg:w-6/12 md:w-6/12 bg-white mx-3 md:mx-0 lg:mx-0">
    <div class="w-full flex justify-between p-3">
      <div class="flex">
        <div class="rounded-full h-8 w-8 bg-gray-500 flex items-center justify-center overflow-hidden">
          <%= image_tag post.image_url, size: '300x200' %>
        </div>
        <span class="pt-1 ml-2 font-bold text-sm"><%= post.user.name %></span>
      </div>
      <span class="px-2 hover:bg-gray-300 cursor-pointer rounded"><%= link_to post_path(post) do%><i class="fas fa-ellipsis-h pt-2 text-lg"></i></span><% end %>
    </div>
    <div class="w-full bg-cover">
    <%= image_tag post.image_url, size: '500x300' %>
    </div>
    <div class="px-3 pb-2">
       <div class="pt-2">
         <i class="far fa-heart cursor-pointer"></i>
        <span class="text-sm text-gray-400 font-medium">100 likes</span>
       </div>
       <div class="pt-1">
        <div class="mb-2 text-sm">
          <span class="font-medium mr-2"><%= link_to post.title, post_path(post)%></span> 
        </div>
      </div>
      <div class="text-sm mb-2 text-gray-400 cursor-pointer font-medium">Location</div>
      <div class="mb-2">
        <div class="mb-2 text-sm">
          <span class="font-medium mr-2"><%= post.location.name %></span> 
        </div>
      </div>
      <div class="text-sm mb-2 text-gray-400 cursor-pointer font-medium">Hashtag</div>
      <div class="mb-2">
        <div class="mb-2 text-sm">
          <span class="font-medium mr-2">
          <% Category.where(id: post.category_ids ).each do |category| %>
            #<%= category.name %>
          <% end%>
          </span> 
        </div>
      </div>
    </div>
  </div>
