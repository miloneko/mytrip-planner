<%= form_with model: comment, url: [post, comment], local: true do |f| %> 
  <div class="w-full gap-1 mx-auto text-base">    
    <%= f.label :body, class:"inline-block" %>
    <%= f.text_area :body, id:"js-comment-body", class:"w-full h-18 bg-gray-50 border focus:ring ring-red-50 rounded outline-none px-3 py-2" %>
    <div class="flex flex-col items-center">
      <%= f.submit t('defaults.post'), class:"bg-white px-2 py-1 text-gray-500 border border-gray-500 font-semibold rounded hover:bg-gray-100" %>
    </div>
  </div>
<%end%>
