<div class="bg-white font-serif py-6 sm:py-8 lg:py-12">
  <div class="px-4 md:px-8 mx-auto">
    <div class="mb-10 md:mb-10">
      <h2 class="text-2xl font-bold text-center lg:text-3xl mb-4 md:mb-6">旅程作成</h2>
    
    <%= render 'form', plan: @plan %>
    <div class="justify-center border-t border-gray-200">
      <h2 class="text-2xl font-bold text-center item-cente"><%= @current_user.name %>さんにおすすめの観光地から作成</h2>
    </div>
      <div class= "flex sm:-m-4 -mx-4 -mb-10 -mt-4 p-5" >
        <div class="w-1/2 md:w-1/4 p-6 mb-6">
          <div id="sample-id-<%= @samples.ids %>">
            <div class="overflow-hidden">
              <div class=" object-center h-full w-full border">
                <% @samples.each do |s| %>
                  <%= image_tag s.image_url%>
                  <%= s.title %>
                <% end %>
          </div>
          <div id="post-id-<%= @reccomendposts.ids %>">
            <div class="overflow-hidden">
                <div class=" object-center h-full w-full border">
                  <% @reccomendposts.each do |p| %>
                    <%= image_tag p.image_url%>
                    <%= p.title %>
                  <% end %>
             <div>
              </div>
              </div>
            </div>
        </div>
      </div>  
    </div>
  </div>
</div>
