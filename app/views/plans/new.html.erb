<div class="bg-white font-serif py-6 sm:py-8 lg:py-12">
  <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
    <div class="mb-10 md:mb-10">
      <h2 class="text-2xl font-bold text-center lg:text-3xl mb-4 md:mb-6">旅程作成</h2>
    </div>
    <%= render 'form', plan: @plan %>
      <h2 class="text-2xl font-bold text-center lg:text-3xl "><%= @current_user.name %>さんにおすすめの観光地から作成</h2>
      <div class="flex flex-wrap sm:-m-4 -mx-4 -mb-10 -mt-4 p-5">
      <% if @like_posts.present? %>
        <%= render partial: 'users/post', collection: @like_posts, as: 'post' %>
      <% else %>
        <p class="p-6"><%= t('.noposts') %></p>
      <% end %> 
    </div>
  </div>
</div>
