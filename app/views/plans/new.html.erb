<div class="bg-white font-serif py-6 sm:py-8 lg:py-12">
  <div class=" px-4 md:px-8 mx-auto">
    <div class="mb-10 md:mb-10">
      <h2 class="text-2xl font-bold text-center lg:text-3xl mb-4 md:mb-6">旅程作成</h2>
    
    <%= render 'form', plan: @plan %>
    <div class="flex justify-center border-t border-gray-200">
      <h2 class="text-2xl font-bold text-center item-cente"><%= @current_user.name %>さんにおすすめの観光地から作成</h2>
    </div>
      <div class="flex flex-wrap sm:-m-4 -mx-4 -mb-10 -mt-4 p-5">
      <% if @like_posts.present? %>
        <%= render partial: 'users/post', collection: @like_posts, as: 'post' %>
      <% else %>
        <div class="w-1/2 md:w-1/4 p-6 mb-6">
          <div id="sample-id-<%= @samples.id %>">
            <div class="overflow-hidden">
              <div class="object-cover object-center h-full w-full border">
                <%= image_tag @samples.image_url%>
                <p><%= @samples.title %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %> 
      </div>
    </div>
  </div>
</div>
