<div class="max-w-md font-serif text-center object-center py-4 px-8 bg-white shadow-lg rounded-lg my-20">
<h1>プラン一覧</h1>
<table>
  <thead>
    <tr>
      <th>タイトル</th>
    </tr>
  </thead>
  <tbody>
    <% @plans.each do |plans| %>
      <tr>
        <td><%= plans.title %>
         <%= link_to '詳細', plan_path(plans)%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>




<div id="display">行きたい場所リストに登録した住所がピンで表示されます</div>

<div id='map'></div>


<style>
#map {
  height: 600px;
  width: 600px;
}
</style>

<script>
    let map;
        function initMap() {
            map = new google.maps.Map(document.getElementById("map"), {
                center:{lat: 35.68123620000001, lng:139.7671248},
                zoom: 12,
            });

            <% @plans.each do |m| %>
                <% results = Geocoder.search(m.address) %>
                <% if results.present? %>
                    <% @latlng = results.first.coordinates %>
                    (function() {
                        let marker = new google.maps.Marker({
                            position:{lat: <%= @latlng[0] %>, lng: <%= @latlng[1] %>},
                            map: map
                        });
                    })();

                <% end %>
            <% end %>
        }
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['API_KEY'] %>&callback=initMap" async defer></script>

<div class="flex flex-wrap object-center place-items-center ">
  <div class="text-center">
    <%= link_to '新規作成',new_plan_path, class: "font-serif pl-5 pr-5 transition-colors duration-700 transform bg-indigo-500 hover:bg-blue-400 text-gray-100 text-lg rounded-lg focus:border-4 border-indigo-300" %>
  </div>
</div>

  <h1>カレンダー</h1>
<%= month_calendar(events: @plans) do |date, plans| %>
  <%= date.day %> 

  <% plans.each do |plan| %>
    <div>
      <%= plan.title %>
    </div>
  <% end %>
<% end %>
</div>
