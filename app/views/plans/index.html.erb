<div class="max-w-md font-serif text-center object-center py-4 px-8 bg-white shadow-lg rounded-lg my-20">
<h1>プラン一覧</h1>
<table>
  <thead>
    <tr>
      <th>タイトル</th>
    </tr>
  </thead>
  <tbody>
    <% @plans.each do |plans| %>
      <tr>
        <td><%= plans.title %>
         <%= link_to '詳細', plan_path(plans)%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="flex flex-wrap object-center place-items-center ">
  <div class="text-center">
    <%= link_to '新規作成',new_plan_path, class: "font-serif pl-5 pr-5 transition-colors duration-700 transform bg-indigo-500 hover:bg-blue-400 text-gray-100 text-lg rounded-lg focus:border-4 border-indigo-300" %>
  </div>
</div>



<div class="bg-red-50 max-w-md object-center py-4 bg-px-8 bg-white shadow-lg rounded-lg my-20">
  <h1>カレンダー</h1>
<%= month_calendar(events: @plans) do |date, plans| %>
  <%= date %>

  <% plans.each do |plan| %>
    <div>
      <%= plan.title %>
    </div>
  <% end %>
<% end %>
</div>