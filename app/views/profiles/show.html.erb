<div class="bg-white py-6 sm:py-8 lg:py-12">
  <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
    <div class="flex flex-col items-center gap-4 md:gap-6">
      <div class="flex flex-col sm:flex-row items-center gap-10">
        <div class="font-bold">
          <a class="text-2xl text-gray-800"><%= @user.name %></a>
        </div>
      </div>
        <div>
          <%= link_to "プロフィールを編集", edit_profile_path, class: "border-2 border-gray-600 text-black px-4 py-2 rounded-md text-1xl font-medium hover:bg-gray-600 transition duration-300"%>
        </div>
    </div>
  </div>
    <p class="text-base font-bold text-center pt-6 sm:pt-8 lg:pt-12"><%= t('.user_posts') %></p>
    <div class="flex flex-wrap sm:-m-4 -mx-4 -mb-10 -mt-4 p-5">
      <% if @posts.present? %>
        <%= render 'swiper', { post: @post }  %>
      <% else %>
        <p><%= t('.no_post') %></p>
      <% end %>
    </div>
    
      <p class="text-base font-bold text-center pt-6 sm:pt-8 lg:pt-12"><%= t('.user_liked_posts') %></p>
    <div class="flex flex-wrap sm:-m-4 -mx-4 -mb-10 -mt-4 p-5">
      <% if @like_posts.present? %>
        <%= render partial: 'users/post', collection: @like_posts, as: 'post' %>
      <% else %>
        <p class="p-6"><%= t('.noposts') %></p>
      <% end %> 
    </div>
   </div>
   <section><%= paginate @like_posts %></section>

   <%= javascript_pack_tag "profiles/show.js" %>
   <%= javascript_pack_tag "swiper/swiper.js" %>
   <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

